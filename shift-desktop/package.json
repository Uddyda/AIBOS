{
  "name": "shift-desktop",
  "productName": "shift-desktop",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": "src/main.js",
  "build": {
    "appId": "com.yourcompany.shiftdesktop",
    "productName": "shift-desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "src/main.js",
      "server/**/*"
    ],
    "asar": true,
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "shift-desktop"
    },
    "extraResources": [
      { "from": "shift_generator", "to": "shift_generator" },
      { "from": "build/python-mac", "to": "python-mac" },
      { "from": "build/python-win", "to": "python-win" }
    ]
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "start": "electron .",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "bundle:py:mac": "python3 -m venv build/python-mac && build/python-mac/bin/python -m pip install --upgrade pip && build/python-mac/bin/pip install pandas",
    "bundle:py:win": "py -3 -m venv build/python-win && build\\python-win\\Scripts\\python -m pip install --upgrade pip && build\\python-win\\Scripts\\pip install pandas",
    "dist:mac": "npm run bundle:py:mac && vite build && electron-builder --mac",
    "dist:win": "npm run bundle:py:win && vite build && electron-builder --win"
  },
  "keywords": [],
  "author": "uchidaatsuya",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron-forge/plugin-webpack": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vercel/webpack-asset-relocator-loader": "^1.7.3",
    "css-loader": "^6.11.0",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "node-loader": "^2.1.0",
    "style-loader": "^3.3.4",
    "typescript": "^5.8.3",
    "vite": "^7.0.6"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@vitejs/plugin-react": "^4.6.0",
    "archiver": "^7.0.1",
    "cors": "^2.8.5",
    "electron-squirrel-startup": "^1.0.1",
    "express": "^5.1.0",
    "iconv-lite": "^0.6.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
